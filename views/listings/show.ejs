<% layout("/layouts/boilerplate") %>

    <body>
        <div class="row">
            <div class="col-md-6 offset-md-3 mt-2">
                <h3>Listings Details: </h3>
            </div>
            <div class="col-md-6 offset-md-3">
                <div class="card show-card">
                    <img src=" <%= listing.image %>" class="card-img-top show-img" alt="listing-image">
                    <div class="card-body">
                        <p class="card-text mt-2">
                            <b>
                                <%= listing.title %>
                            </b> <br>
                            <%= listing.description %> <br> <hr>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                                    <%= listing.location %> <br>
                                        <%= listing.country %>
                        </p>
                    </div>
                </div>
                <div class="btns">
                    <a class="btn btn-outline-danger" href="http://localhost:8080/listings/<%= listing._id %>/edit">Edit</a>
                    <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                        <button class="btn btn-outline-dark offset-2 offset-md-4">delete</button>
                    </form>
                </div>

            </div>

        </div>
        <br><br><br>

    </body>