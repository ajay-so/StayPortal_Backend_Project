<% layout("/layouts/boilerplate") %>

    <body>
        <h3 class="mt-3">All Listings</h3>
        <hr>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-2 mt-3">
            <% for(let listing of allListings) {%>
                <a href="/listings/<%= listing._id %>" class="listing-links">
                    <div class="card col listing-card">
                        <img src=" <%= listing.image %> " class="card-img-top" alt="listing-image"
                            style="height: 20rem;">
                            <div class="card-img-overlay overlay"><%= listing.title %></div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b> <br>
                                &#8377;<%= listing.price.toLocaleString("en-IN") %> / night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>
    </body>