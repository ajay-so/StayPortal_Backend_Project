<% if(success && success.length) {%>
    <div class="row mt-2">
        <div class="alert alert-success col-md-6 offset-md-3 alert-dismissible fade show" role="alert">
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>

<% if(error && error.length) {%>
    <div class="row mt-2">
        <div class="alert alert-danger col-md-6 offset-md-3 alert-dismissible fade show" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>